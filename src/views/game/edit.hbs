<main id="edit">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}

    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Game Code Offer</h1>
            <form action="#" method="post">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    {{#each options}}
                    <option value='{{value}}' {{selected}}>{{content}}</option>
                    {{/each}}
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="{{image}}" value="{{image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{description}}</textarea>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>

<script>
    document.getElementById('platform').value = {{ game.platform }};
</script>